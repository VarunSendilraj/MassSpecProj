import numpy as np

def save_image_as_img(image_array, img_file):
    # Convert the image array to the desired data type
    image_array = image_array.astype(np.uint8)

    # Save the image array as a binary file with .img extension
    with open(img_file, 'wb') as file:
        file.write(image_array.tobytes())

# Example usage
# Assuming you have a numpy array representing the image
image_array = np.array([[255, 0, 0], [0, 255, 0], [0, 0, 255]])
img_file_path = 'image.img'

# Save the image as .img file
save_image_as_img(image_array, img_file_path)

